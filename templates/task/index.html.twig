{% extends 'base.html.twig' %}

{% block title %}Hello ProviderController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container text-center">
            <h1>Estimated Finish Week : {{ last_week }}</h1>
                <h3> Assigned Tasks</h3>
                <div class="col-12">
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Task Name</th>
                            <th>Difficult</th>
                            <th>Time</th>

                        </tr>
                        {% for task in tasks %}
                            <tr>
                                <td>{{ task.id }}</td>
                                <td>{{ task.name }}</td>
                                <td>{{ task.difficulty }}</td>

                            </tr>
                        {% endfor %}
                    </table>
                </div>
        </div>
    </div>
{% endblock %}
